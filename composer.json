{
  "name": "verbruggenalex/drupal-installer",
  "type": "composer-plugin",
  "require": {
    "composer-plugin-api": "^1.0"
  },
  "replace": {
    "composer/installers": "*"
  },
  "autoload": {
    "psr-0": {
      "VerbruggenAlex\\Composer\\": "src/"
    }
  },
  "extra": {
    "drupal-installer": {
      "build-dir": {"--dev": "build", "--no-dev": "dist"},
      "version-dir": {"--dev": "{$branch}", "--no-dev": "{$tag}"}
    },
    "class": "VerbruggenAlex\\Composer\\DrupalInstallerPlugin"
  }
}
